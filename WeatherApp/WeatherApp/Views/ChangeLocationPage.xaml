<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.ChangeLocationPage"
             Title="Chỉnh sửa vị trí" BackgroundColor="{DynamicResource PageBackgroundColor}">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button x:Name="AddButton" Text="+" Grid.Row="0" Grid.Column="0" Clicked="AddButton_Clicked"></Button>
                <Label Text="Thêm vị trí" VerticalOptions="Center" HorizontalOptions="Start" 
                       Grid.Row="0" Grid.Column="1"></Label>

                <Button Text="+" Grid.Row="1" Grid.Column="0"></Button>
                <Label Text="Hà nội, Việt Nam" VerticalOptions="Center" HorizontalOptions="Start" 
                       Grid.Row="1" Grid.Column="1"></Label>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>